{
  "name": "api-rest-boiler-plate",
  "version": "0.0.1",
  "author": "mrwaks",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "nodemon src/server.ts || ts-node src/server.ts",
    "build": "pnpm i || npm i; tsc",
    "build:dev": "pnpm i || npm i",
    "build:dev:db": "./.bin/build-with-db.sh",
    "test": "jest",
    "test:load": "locust -f ./test/load/locustfile.py",
    "db:generate": "pnpx prisma generate || npx prisma generate",
    "db:migrate:init": "pnpx prisma migrate dev --name 'init' || npx prisma migrate dev --name 'init'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/node-cron": "^3.0.7",
    "@types/request-ip": "^0.0.37",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "prisma": "^4.8.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@prisma/client": "^4.8.0",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "joi": "^17.7.0",
    "node-cron": "^3.0.2",
    "request-ip": "^3.3.0",
    "ts-node": "^10.9.1",
    "winston": "^3.8.2"
  }
}
